<h1>投稿詳細</h1>
<%= attachment_image_tag @post, :image %>
<%= @post.name %>
<%= @post.introduction %>
<%#= @post.star %>
<div id="like_buttons_<%=@post.id%>">
  <%= render 'likes/like', post: @post %>
</div>

<%= @post.user.name %>

<% if @post.user == current_user %>
  <%= link_to "投稿を編集する", edit_post_path(@post) %>
  <%= link_to "投稿を削除する", post_path(@post), method: :delete %>
<% end %>


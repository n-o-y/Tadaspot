<div class="container">
  <div class="row mx-auto my-4 justify-content-center align-items-center">
    <%= image_tag asset_path('logo.png'), size: '175x70'%>
    <h2 class="ml-2">ユーザ登録</h2>
  </div>
  <div class="row mx-auto">
    <div class="col-6 mx-auto py-4 border d-flex justify-content-center shadow">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :ユーザ名 %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </div>

        <div class="field">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :パスワード確認用 %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions text-right mt-2">
          <%= f.submit "ユーザ登録", class:"btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row my-4">
    <p class="mx-auto">ユーザ登録がお済の方は<%= link_to "こちら", new_user_session_path %>からログイン</p>
  </div>
</div>
<div class="container border">
  <div class="row mx-auto border justify-content-center">
    <h2>ログイン</h2>
  </div>
  <div class="row mx-auto border">
    <div class="col-6 mx-auto border d-flex justify-content-center">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <!--<%# if devise_mapping.rememberable? %>-->
        <!--  <div class="field">-->
        <!--    <%#= f.check_box :remember_me %>-->
        <!--    <%#= f.label :remember_me %>-->
        <!--  </div>-->
        <!--<#% end %>-->

        <div class="actions">
          <%= f.submit "ログイン", class:"btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <p class="col">ユーザ登録がお済でない方はこちらから新規登録</p>
  </div>
</div>
<% if user_signed_in? %>
  <% if post.liked_by?(current_user) %>
    <p>
      <%= link_to post_likes_path(post.id), method: :delete, remote: true, style:"text-decoration: none; color: black;" do %>
        <i class="fas fa-heart"></i> <%= post.likes.count %>
      <% end %>
    </p>
  <% else %>
    <p>
      <%= link_to post_likes_path(post.id), method: :post, remote: true, style:"text-decoration: none; color: black;" do %>
        <i class="far fa-heart"></i> <%= post.likes.count %>
      <% end %>
    </p>
  <% end %>
<% else %>
  <p><i class="far fa-heart"></i> <%= post.likes.count %></p>
<% end %>
<script src="https://maps.googleapis.com/maps/api/js?key=<%=ENV["GOOGLE_MAP_KEY"]%>&callback=initMap" async defer></script>
<%= include_gon %>
<%= javascript_include_tag 'initMap.js' %>
<%= javascript_include_tag 'searchAddress.js' %>
<%= javascript_include_tag 'currentLocation.js' %>
<%= javascript_include_tag 'show.js' %>

<div class="container-fluid border">
  <div class="row my-5 justify-content-between">
    <h2 class="mx-3"><%= current_user.name %>さんのマイページ</h2>
    <%= link_to "登録情報を編集する", edit_user_registration_path, class:"btn btn-info mx-3" %>
  </div>
  <div class="row border" style="height: 700px;">
    <div class="col-md-9 order-md-1" id='map' style="height: 700px;"></div>
    <div id="pagenate" class="border col-md-3 order-md-0">
      <ul class="tab-list list-unstyled">
        <li class="tab tab-active">投稿一覧</li>
        <li class="tab">いいね一覧</li>
      </ul>
      <div class="tabbox-contents">
        <div class="tabbox box-show">
          <%= render 'users/list', posts: @posts %>
        </div>
        <div class="tabbox">
          <%= render 'users/list', posts: @post_like %>
        </div>
      </div>
  </div>
</div>

<%= javascript_include_tag 'review.js' %>
<%= javascript_include_tag 'scroll.js' %>